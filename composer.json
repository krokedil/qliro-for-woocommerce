{
    "name": "krokedil/qliro-for-woocommerce",
    "description": "Qliro Checkout For WooCommerce",
    "type": "wordpress-plugin",
    "version": "2.2.2",
    "authors": [
        {
            "name": "Krokedil AB",
            "email": "info@krokedil.se"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "php-stubs/woocommerce-stubs": "dev-master",
        "symplify/phpstan-rules": "*",
        "phpcompatibility/php-compatibility": "*",
        "phpcompatibility/phpcompatibility-wp": "*",
        "wp-coding-standards/wpcs": "*",
        "wpify/scoper": "3.1.3",
        "squizlabs/php_codesniffer": "*"

    },
    "minimum-stability": "dev",
    "config": {
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "wpify/scoper": true
        }
    },
    "scripts": {
        "get-changelog": "bash .github/scripts/new-version.sh",
        "update-version": "bash .github/scripts/new-version.sh update",
        "create-changelog": "bash .github/scripts/new-changelog.sh",
        "pre-release-check": [
            "bash .github/scripts/check-changelog-master.sh",
            "bash .github/scripts/check-version-and-compat.sh"
        ],
        "lint": "vendor/bin/phpcs . --standard=phpcs.xml.dist --extensions=php -q",
        "lint:fix": "vendor/bin/phpcbf . --standard=phpcs.xml.dist --extensions=php -q",
        "lint:changes": "git diff --name-only HEAD~1 | grep '\\.php$' | xargs vendor/bin/phpcs --standard=phpcs.xml.dist --extensions=php -q",
        "lint:fix:changes": "git diff --name-only HEAD~1 | grep '\\.php$' | xargs vendor/bin/phpcbf --standard=phpcs.xml.dist --extensions=php -q",
        "install-codestandards": [
            "PHPCSStandards\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
        ],
        "post-install-cmd": [
            "@install-codestandards"
        ]
    },
    "extra": {
        "wpify-scoper": {
            "prefix": "KrokedilQliroDeps",
            "folder": "vendor/dependencies",
            "autorun": true,
            "globals": [
                "wordpress",
                "woocommerce"
            ],
            "composerjson": "composer-dependencies.json",
            "composerlock": "composer-dependencies.lock"
        }
    }
}
