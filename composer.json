{
    "name": "krokedil/qliro-one-for-woocommerce",
    "description": "Qliro One Checkout For WooCommerce",
    "type": "wordpress-plugin",
    "version": "1.7.1",
    "authors": [
        {
            "name": "Krokedil AB",
            "email": "info@krokedil.se"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "php-stubs/woocommerce-stubs": "dev-master",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "symplify/phpstan-rules": "*",
        "phpcompatibility/php-compatibility": "*",
        "phpcompatibility/phpcompatibility-wp": "*",
        "wp-coding-standards/wpcs": "*"
    },
    "minimum-stability": "dev",
    "config": {
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "wpify/scoper": true
        }
    },
    "scripts": {
        "lint": "./vendor/bin/phpcs --standard=phpcs.xml.dist --colors --encoding=utf-8 -p `git ls-files --others --exclude-standard -c|grep \\.php`",
        "lint-fix": "./vendor/bin/phpcbf --standard=phpcs.xml.dist --colors --encoding=utf-8 -p `git ls-files --others --exclude-standard -c|grep \\.php`",
        "install-codestandards": [
            "PHPCSStandards\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
        ],
        "post-install-cmd": [
            "@install-codestandards"
        ]
    },
    "extra": {
        "wpify-scoper": {
            "prefix": "KrokedilQliroDeps",
            "folder": "dependencies",
            "autorun": true,
            "globals": [
                "wordpress",
                "woocommerce"
            ]
        }
    }
}
